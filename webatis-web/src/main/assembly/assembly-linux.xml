<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
                        http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>linux</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/webatis-web/bin</directory>
            <outputDirectory>webatis-web/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/webatis-web/lib</directory>
            <outputDirectory>webatis-web/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
                <include>libwrapper-linux*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/webatis-web/conf</directory>
            <outputDirectory>webatis-web/conf</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/classes/</directory>
            <outputDirectory>webatis-web/conf</outputDirectory>
            <includes>
                <include>logback-spring.xml</include>
                <include>application.yml</include>
                <include>application-sit.yml</include>
                <include>application-prod.yml</include>
                <include>gen.properties</include>
                <include>mybatis-config.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/conf</directory>
            <outputDirectory>webatis-web/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/classes/</directory>
            <outputDirectory>webatis-web/logs</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>

</assembly>
